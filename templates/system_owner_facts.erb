---
# file managed by puppet - DO NOT CHANGE!
# system owner info
<% @system_owners.each_with_index do |owner, idx| -%>
<%= "system_owners_#{idx}: #{owner}" %>
<% end -%>
<% @system_groups.each_with_index do |group, idx| -%>
<%= "system_groups_#{idx}: #{group}" %>
<% end -%>
system_owners:
<% @system_owners.each do |owner| -%>
  <%= "- #{owner}" %>
<% end -%>
system_groups:
<% @system_groups.each do |group| -%>
  <%= "- #{group}" %>
<% end -%>
system_role: <%= @system_role %>
system_note: <%= @system_note %>
# system support info
support_team: <%= @support_team %>
support_level: <%= @support_level %>
support_contact: <%= @support_contact %>
fact_flat: <%= @fact_flat %>
# client facts
<% @clients.each do |client, value| -%>
<%= "#{client}_client: #{value}" %>
<% end -%>
# system patch info
patch_method: <%= @patch_method %>
<% if @patch_method == 'cron' -%>
patch_reboot: <%= @patch_reboot %>
patch_script: <%= @patch_script_dst %>
patch_cron: <%= @patch_minute %> <%= @patch_hour %> <%= @patch_monthday %> <%= @patch_month %> <%= @patch_weekday %>
<% end -%>
<% if @patch_method == 'yum_cron' -%>
patch_download_updates: <%= @patch_download_updates %>
patch_days_of_week: <%= @patch_days_of_week %>
patch_update_cmd: <%= @patch_update_cmd %>
patch_apply_updates: <%= @patch_apply_updates %>
<% end -%>
